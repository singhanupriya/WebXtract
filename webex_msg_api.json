{"contentType": "application/vnd.microsoft.card.adaptive",
"content": 
{
    {
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "style": "Person",
                            "url": "https://developer.webex.com/images/webex-teams-logo.png",
                            "size": "Medium",
                            "height": "50px"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Cisco Webex Teams",
                            "weight": "Lighter",
                            "color": "Accent"
                        },
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "Onis Card Query",
                            "horizontalAlignment": "Left",
                            "wrap": true,
                            "color": "Light",
                            "size": "Large",
                            "spacing": "Small"
                        }
                    ],
                    "width": "stretch"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Here comes Onis to the rescue, please paste your query in the box.",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "placeholder": "SR Number",
            "maxLength": 9,
            "id": "sr"
        },
        {
            "type": "TextBlock",
            "text": "Post your query here",
            "spacing": "Medium",
            "color": "Attention",
            "separator": true,
            "wrap": true,
            "id": "query"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Input.ChoiceSet",
                            "placeholder": "Select",
                            "choices": [
                                {
                                    "title": "Forward to SR",
                                    "value": "SR"
                                },
                                {
                                    "title": "Forward to TechZone",
                                    "value": "TechZone"
                                }
                            ],
                            "style": "expanded",
                            "spacing": "Padding",
                            "separator": true,
                            "id": "choice"
                        }
                    ],
                    "spacing": "Small"
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Submit",
                    "data": {
                        "subscribe": true
                    },
                    "style": "positive",
                    "id": "act"
                }
            ],
            "horizontalAlignment": "Left",
            "spacing": "None"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
}
}
}